<%= simple_form_for [@room, @task] do |f| %>
    <%= f.input :name %>
    <%= f.input :start_time %>
    <%= f.select_recurring :recurring %>
    <%= f.input :notes %>
    <%= f.input :last_cleaned, include_blank: true %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.button :submit %>
    <%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
<% end %>

