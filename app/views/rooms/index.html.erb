<div class="container">
  <div class="col">
    <p id="notice"><%= notice %></p>
  </div>
   <div class="col">
      <% if @todays_tasks.length > 0 %>
        <h3 class="todays-title">Today's to-do list</h3>
        <div>
          <% @todays_tasks.each do |task| %> 
            <div class="task-today">
              <li id="task-item">
                <%= link_to task.name.capitalize, room_path(task.room_id) %><%task.id%>
              </li>
              <%= render './tasks/update', task: task%>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>Woo hoo come back tmr!</p>
      <% end %>
    </div>
    <div class="col">
      <%= month_calendar events: @calendar_tasks do |day, tasks| %>
        <div><%= day.strftime("%d") %></div>
        <% if tasks.count > 3 %>
          <% tasks.take(3).each do |task| %>
            <div><%= link_to task.name.capitalize, room_path(task.room_id)  %></div>
          <% end %>
          <p>...</p>
        <% else %>
          <% tasks.each do |task| %>
            <div><%= link_to task.name.capitalize, room_path(task.room_id) %></div>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <div class="col">
        <div id="new-room">
          <% if policy(Room).create? %>
            <%= link_to 'Add New +', new_room_path, remote: true %>
          <% end %>
        </div>
        <h3 class="pt-2 pb-2">Cleaning Areas</h3>
          <div class="cards rooms">
            <% @rooms.each do |room| %>
              <% if policy(room).show? %>
                <%= link_to room do %>
                  <div class="card room">
                    <div class="card-body"><%= room.name.capitalize%></div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
</div>