<p id="notice"><%= notice %></p>

<h1>Home</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name.capitalize, room %></td>
        <td><%= link_to '✎', edit_room_path(room) %></td>
        <td><%= link_to '❌', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
