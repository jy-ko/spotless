<div class="contain">
  <div class="main">
    <p id="notice"><%= notice %></p>
    <h1>Hi, <%= current_user.name %>!</h1>

    <%= month_calendar events: @calendar_tasks do |day, tasks| %>
    <div><%= day.strftime("%d") %></div>
      <% tasks.each do |task| %>
        <%= link_to task.name %>
      <% end %>
    <% end %>
    
    <div id="new-room">
      <% if policy(Room).create? %>
        <%= link_to 'Add New', new_room_path, remote: true %>
      <% end %>
    </div>
    <p>Cleaning Areas</p>

    <div class="cards rooms">
      <% @rooms.each do |room| %>
        <% if policy(room).show? %>
          <%= link_to room do %>
            <div class="card room">
              <div class="card-body"><%= room.name.capitalize%></div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div>
    <% if @todays_tasks.length > 0 %>
      <h3>Today's to-do</h3>
      <div>
        <% @todays_tasks.each do |task| %> 
          <div class="task-today">
            <li id="task-item"><%= task.name %><%task.id%></li>
            <%= render './tasks/update', task: task%>
          </div>
        <% end %>

      <div>
    <% else %>
      <p>Woo hoo come back tmr!</p>
    <% end %>
  </div>
</div>